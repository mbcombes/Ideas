@model User
<p class="indent text-white">Welcome to Great Ideas, where ideas are born! Great Ideas is a site to help creative people share and get some ideas flowing. Looking for an idea? Simply register and browse through the ideas and like any ideas you find! Want to share some ideas? Easy! Just register and start posting! Have fun!</p>
<div class="container border border-secondary rounded shadow-lg bg-secondary text-white mb-5">
    <h1 class="display-4 text-center">Register to start sharing your ideas!</h1>
    <form class="mt-5" action="/register" method="post">
        <div class="form-group row">
            <label asp-for="Name" class="col-form-label col-md-2"></label>
            <div class="col-md-10">
                <span class="text-danger" asp-validation-for="Name"></span>
                <input asp-for="Name" class="form-control">
            </div>
        </div>
        <div class="form-group row">
            <label asp-for="Alias" class="col-form-label col-md-2"></label>
            <div class="col-md-10">
            <span class="text-danger" asp-validation-for="Alias"></span>
                <input asp-for="Alias" class="form-control">
            </div>
        </div>
        <div class="form-group row">
                <label asp-for="Email" class="col-form-label col-md-2"></label>
            <div class="col-md-10">
                <span class="text-danger" asp-validation-for="Email"></span>
                <input asp-for="Email" class="form-control">
            </div>
        </div>
        <div class="form-group row">
                <label asp-for="Password" class="col-form-label col-md-2"></label>
            <div class="col-md-10">
                <span class="text-danger" asp-validation-for="Password"></span>
                <input asp-for="Password" class="form-control">
            </div>
        </div>
        <div class="form-group row">
                <label asp-for="Confirm" class="col-form-label col-md-2">Confirm PW:</label>
            <div class="col-md-10">
                <span class="text-danger" asp-validation-for="Confirm"></span>
                <input asp-for="Confirm" class="form-control">
            </div>
        </div>
        <div class="text-center">
            <button type="submit" class="btn btn-light mt-2 mb-4" >Sign Up!</button>
            <p class="bg-white text-secondary">Already registered? <a href="/login">Login</a>
        </div>
    </form>
</div>
</div>