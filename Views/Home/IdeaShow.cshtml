@model Idea
<nav class="navbar navbar-expand-md navbar-light bg-light nav-color">
    <div class="container-fluid">
        <a class="navbar-brand" href="#"><img class="logo" src="~/images/logo.png" alt="light bulb"></a>
        <h1 class="display-4">Great Ideas!</h1>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent"
            aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav ml-auto">
                <li class="nav-item active">
                    <a class="nav-link" href="/dashboard">Home <span class="sr-only">(current)</span></a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/destroy">Log Out</a>
                </li>
            </ul>
        </div>
    </div>
</nav>
<div class="container">
    <div class='border border-secondary rounded mt-3 p-2 card'>
    <p><a href="/Users/@Model.Creator.UserId">@Model.Creator.Alias</a> says:</p>
    <p class="ml-3">@Model.Content</p>
    </div>
    <div class="container mt-4">
        <h3>People who like this post:</h3>
        <table class="table table-dark shadow-lg mt-3">
            <thead>
                <th>Alias</th>
                <th>Name</th>
            </thead>
            <tbody>
                @{
                foreach(var like in Model.Likes)
                {
                <tr>
                    <td><a href="/Users/@like.User.UserId">@like.User.Alias</a></td>
                    <td>@like.User.Name</td>
                </tr>
                }
                }
            </tbody>
        </table>
    </div>
</div>