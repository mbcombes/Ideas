@model Login
<nav class="navbar navbar-expand-md navbar-light bg-light nav-color">
    <div class="container-fluid">
        <a class="navbar-brand" href="#"><img class="logo" src="~/images/logo.png" alt="light bulb"></a>
        <h1 class="display-4">Great Ideas!</h1>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent"
            aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav ml-auto">
                <li class="nav-item active">
                    <a class="nav-link" href="/dashboard">Home <span class="sr-only">(current)</span></a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/destroy">Log Out</a>
                </li>
            </ul>
        </div>
    </div>
</nav>
<div class="container-fluid landing-bg p-5">
<div class="container border border-secondary rounded shadow-lg bg-secondary text-white">
    <h1 class="display-4 text-center">Login</h1>
    <form  class="mt-5" action="/login" method="post">
        <div class="form-group row">
            <label asp-for="EmailLogin" class="col-form-label col-md-1"></label>
            <div class="col-md-11">
                <span class="text-danger" asp-validation-for="EmailLogin"></span>
                <input asp-for="EmailLogin" class="form-control">
            </div>
        </div>
        <div class="form-group row">
            <label asp-for="PasswordLogin" class="col-form-label col-md-1"></label>
            <div class="col-md-11">
                <span class="text-danger" asp-validation-for="PasswordLogin"></span>
                <input asp-for="PasswordLogin" class="form-control">
            </div>
        </div>
        <div class="text-center">
            <button type="submit" class="btn btn-light mt-4 mb-4">Login</button>
        </div>
    </form>
</div>
</div>